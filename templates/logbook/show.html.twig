{% extends 'base_driver.html.twig' %}

{% block title %}{% trans %}Drive{% endtrans %}{% endblock %}

{% block body %}
	<main>
			<div class="container-fluid px-4">
    <h1>{% trans %}Drive{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conduire.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}When{% endtrans %}</th>
                <td>{{ conduire.realiserAt ? conduire.realiserAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}From{% endtrans %}</th>
                <td>{{ conduire.partir }}</td>
            </tr>
            <tr>
                <th>{% trans %}To{% endtrans %}</th>
                <td>{{ conduire.arriver }}</td>
            </tr>
            <tr>
                <th>{% trans %}Distance{% endtrans %}</th>
                <td>{{ conduire.distance }}</td>
            </tr>
            <tr>
                <th>{% trans %}Odometer{% endtrans %}</th>
                <td>{{ conduire.compteur }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('logbook_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a href="{{ path('logbook_edit', {'id': conduire.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('logbook/_delete_form.html.twig') }}

    </div></main>
{% endblock %}
